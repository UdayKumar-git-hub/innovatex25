{
  "version": 2,
  "builds": [
    { "src": "api/server.cjs", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.cjs" },
    { "source": "/(.*)", "destination": "/dist/index.html" }
  ]
}
